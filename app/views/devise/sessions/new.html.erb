<body style=" background: url('https://i.pinimg.com/originals/24/40/82/244082d02ab72a06e70f55ad2d3e2519.jpg') no-repeat center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;">


<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row justify-content-center">
  <div class="card mt-5">
    <article class="card-body">
      <a href="/users/sign_up" class="float-right btn btn-outline-primary">Sign up</a>
      <h4 class="card-title mb-4 mt-1">Sign in</h4>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: 'btn btn-primary btn-block' %>
        </div>
  </article>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
