<div class="banner">
  <div class="banner-content">
    <h1>Your bookings</h1>
    <%= link_to "Add a bookings", new_booking_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @bookings.each do |booking| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card">
          <div class="card-description">
            <h2><%= booking.start_date %></h2>
            <h2><%= booking.end_date %></h2>
          </div>
          <%= link_to "", booking_path(booking), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
