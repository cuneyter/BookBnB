
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon bg-transparent">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", "/", class: "btn btn-primary nav-link", style: "color: grey; background-color: white; border-color: #e0d8d4; margin: 5px; opacity: .8" %>
        </li>
        <li class="nav-item">
          <%= link_to "Rent your flat", new_flat_path, class: "btn btn-primary nav-link", style: "color: grey; background-color: white; border-color: #e0d8d4; margin: 5px; opacity: .8" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/signebunke", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false, style: "margin: 5px" %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% if current_user.flats.present? %>
              <%= link_to "My flats", flats_path, class: "dropdown-item" %>
            <% end %>
            <%= link_to "My bookings", bookings_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Sign In", new_user_session_path, class: "btn btn-primary nav-link", style: "color: white" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
